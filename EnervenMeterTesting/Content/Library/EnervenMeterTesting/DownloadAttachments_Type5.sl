namespace: EnervenMeterTesting
operation:
  name: DownloadAttachments_Type5
  inputs:
    - accessToken
    - filePath
    - summarySheetsDict
  python_action:
    use_jython: false
    script: "def execute(accessToken, filePath, summarySheetsDict): \n    import requests\n    import json\n    import datetime\n    import os\n    \n    #convert string back to dictionary\n    json_acceptable_string = summarySheetsDict.replace(\"'\", \"\\\"\")\n    summarySheetsDict = json.loads(json_acceptable_string)\n\n    today = datetime.datetime.now()\n    year = today.strftime(\"%Y\") \n    \n    url = \"https://graph.microsoft.com/v1.0/drives/b!qLnxhp_SHUuAsdyx2DVZTU3MsDyQjVJIpIH-wKwcAy65QTGBahSSTpZ_Rt2cU8qw/root:/General/\"+year+\"/Type%205%20Test%20Results:/children\"\n    body = {}\n    head = {\"Authorization\": \"Bearer \" + accessToken}\n    response = requests.get(url, headers=head, data = body)\n    json_data = json.loads(response.text)\n    \n    resultsDownloaded = 0\n    if response.status_code >= 200 and response.status_code < 300:\n        resultsfound = len(json_data['value'])\n        for x in json_data['value']:\n            jfileName = x['name']\n            if \"Attachments\" in jfileName:\n                if jfileName in summarySheetsDict:\n                    spID = summarySheetsDict[jfileName]\n                    spIDs = spID.split(\",\")\n                    for id in spIDs:\n                        attachmentURL = \"https://graph.microsoft.com/v1.0/drives/b!qLnxhp_SHUuAsdyx2DVZTU3MsDyQjVJIpIH-wKwcAy65QTGBahSSTpZ_Rt2cU8qw/root:/General/\"+year+\"/Type%205%20Test%20Results/\"+ jfileName + \":/children?$filter=startswith(Name,'ID \"+id+\"')\"\n                        body = {}\n                        head = {\"Authorization\": \"Bearer \" + accessToken}\n                        response = requests.get(attachmentURL, headers=head, data = body)\n                        json_data = json.loads(response.text)\n                        if response.status_code >= 200 and response.status_code < 300:\n                            for x in json_data['value']:\n                                attachmentName = x['name']\n                                resultsDownloaded = resultsDownloaded + 1 \n                                newFileName = attachmentName.replace(\" \", \"%20\")\n                                fileURL = \"https://graph.microsoft.com/v1.0/drives/b!qLnxhp_SHUuAsdyx2DVZTU3MsDyQjVJIpIH-wKwcAy65QTGBahSSTpZ_Rt2cU8qw/root:/General/\"+year+\"/Type%205%20Test%20Results/\"+ jfileName +\"/\" + newFileName + \":/content\"\n                                filebody = {}\n                                fileHead = {\"Authorization\": \"Bearer \" + accessToken}\n                                fileResponse = requests.get(fileURL, headers=fileHead, data = filebody)\n                                if fileResponse.status_code >= 200 and fileResponse.status_code < 300:\n                                    if os.path.exists(filePath+jfileName) == False:\n                                        os.makedirs(filePath+jfileName)\n                                    with open(filePath+jfileName+\"/\"+attachmentName, 'wb') as f:\n                                        f.write(fileResponse.content)             \n    else:\n        resultsfound = response.reason\n    return{\"resultsfound\":resultsfound,\"resultsDownloaded\":resultsDownloaded}"
  outputs:
    - resultsfound
    - resultsDownloaded
  results:
    - SUCCESS
